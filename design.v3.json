{
  "designSystem": {
    "metadata": {
      "projectName": "Academic Research Poster Design System",
      "category": "Scientific Presentation",
      "language": "Korean (한국어)",
      "layoutOrientation": "landscape",
      "aspectRatio": "16:9"
    },
    
    "colorPalette": {
      "primary": {
        "teal900": "#1B7A6E",
        "teal800": "#1F8B7D",
        "teal700": "#2A9D8F",
        "teal600": "#3AAFA0",
        "teal500": "#57BCB1",
        "teal400": "#7BCFC5",
        "teal300": "#9FDDD6",
        "teal200": "#B8E6E1",
        "teal100": "#D4F1EE"
      },
      "neutrals": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray700": "#374151",
        "gray900": "#111827"
      },
      "semantic": {
        "dataVisualization": {
          "primary": "#57BCB1",
          "secondary": "#7BCFC5",
          "tertiary": "#9FDDD6"
        }
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Noto Sans KR, sans-serif",
        "fallback": "-apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif"
      },
      "scale": {
        "mainTitle": {
          "fontSize": "48px",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "color": "#1B7A6E",
          "letterSpacing": "-0.02em"
        },
        "subtitle": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.4",
          "color": "#57BCB1",
          "letterSpacing": "0"
        },
        "sectionHeader": {
          "fontSize": "22px",
          "fontWeight": "700",
          "lineHeight": "1.3",
          "color": "#FFFFFF",
          "letterSpacing": "0.02em",
          "textTransform": "uppercase"
        },
        "bodyText": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.8",
          "color": "#374151",
          "letterSpacing": "0"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "1.6",
          "color": "#6B7280",
          "letterSpacing": "0"
        }
      }
    },

    "componentStyles": {
      "headerBanner": {
        "background": {
          "type": "solid",
          "color": "#FFFFFF"
        },
        "height": "140px",
        "padding": "24px 48px",
        "borderBottom": {
          "width": "4px",
          "style": "solid",
          "color": "#1B7A6E"
        },
        "logoArea": {
          "iconColor": "#1B7A6E",
          "iconSize": "32px",
          "textColor": "#1B7A6E",
          "textSize": "18px",
          "textWeight": "600"
        }
      },

      "sectionContainer": {
        "background": {
          "type": "solid",
          "color": "#FFFFFF"
        },
        "padding": "32px",
        "margin": "16px",
        "borderRadius": "0px",
        "border": "none",
        "boxShadow": "none"
      },

      "sectionHeader": {
        "background": {
          "type": "solid",
          "color": "#1B7A6E"
        },
        "height": "auto",
        "padding": "16px 32px",
        "borderRadius": "0px",
        "textStyle": {
          "fontSize": "22px",
          "fontWeight": "700",
          "color": "#FFFFFF",
          "textTransform": "uppercase"
        }
      },

      "brandBadge": {
        "position": "top-right",
        "background": {
          "type": "solid",
          "color": "#1B7A6E"
        },
        "width": "180px",
        "height": "180px",
        "shape": "triangular-flag",
        "logoColor": "#FFFFFF",
        "textColor": "#FFFFFF",
        "borderRadius": "0 0 0 0"
      },

      "dataVisualization": {
        "lineChart": {
          "lineColor": "#57BCB1",
          "lineWidth": "3px",
          "pointColor": "#57BCB1",
          "pointRadius": "6px",
          "pointStroke": "#FFFFFF",
          "pointStrokeWidth": "2px",
          "gridColor": "#E5E7EB",
          "gridWidth": "1px",
          "axisColor": "#6B7280",
          "backgroundColor": "#FFFFFF"
        },
        "donutChart": {
          "segments": {
            "segment1": {
              "color": "#9FDDD6",
              "label": "여름"
            },
            "segment2": {
              "color": "#3AAFA0",
              "label": "겨울"
            },
            "segment3": {
              "color": "#1B7A6E",
              "label": "기타"
            }
          },
          "centerHole": "50%",
          "strokeWidth": "0px",
          "backgroundColor": "#FFFFFF"
        },
        "legend": {
          "position": "right",
          "fontSize": "14px",
          "fontColor": "#374151",
          "markerSize": "12px",
          "spacing": "8px"
        }
      },

      "contentList": {
        "bulletStyle": {
          "type": "disc",
          "color": "#1B7A6E",
          "size": "6px"
        },
        "itemSpacing": "12px",
        "indentation": "20px",
        "textColor": "#374151",
        "lineHeight": "1.8"
      },

      "footer": {
        "background": {
          "type": "solid",
          "color": "#1B7A6E"
        },
        "height": "60px",
        "padding": "16px 48px",
        "textColor": "#FFFFFF",
        "fontSize": "14px",
        "borderRadius": "0 0 24px 24px",
        "logoColor": "#FFFFFF"
      }
    },

    "layoutGrid": {
      "columns": 2,
      "columnGap": "32px",
      "rowGap": "16px",
      "containerPadding": "0px",
      "maxWidth": "1920px",
      "sections": {
        "header": {
          "gridColumn": "1 / -1",
          "height": "auto"
        },
        "leftColumn": {
          "gridColumn": "1",
          "sections": ["abstract", "introduction", "methods"]
        },
        "rightColumn": {
          "gridColumn": "2",
          "sections": ["results", "conclusions"]
        },
        "footer": {
          "gridColumn": "1 / -1",
          "height": "60px"
        }
      }
    },

    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    },

    "borders": {
      "none": "0",
      "thin": "1px",
      "medium": "2px",
      "thick": "4px",
      "radius": {
        "none": "0px",
        "sm": "4px",
        "md": "8px",
        "lg": "16px",
        "xl": "24px",
        "full": "9999px"
      }
    },

    "shadows": {
      "none": "none",
      "card": "0 2px 4px rgba(27, 122, 110, 0.08)",
      "elevated": "0 4px 12px rgba(27, 122, 110, 0.12)"
    },

    "designPatterns": {
      "sectionStructure": {
        "pattern": "header + content",
        "headerStyle": "full-width colored bar",
        "contentStyle": "white background with padding",
        "spacing": "no gap between header and content"
      },
      
      "visualHierarchy": {
        "primary": "Section headers with teal background",
        "secondary": "Content body with standard text",
        "accent": "Data visualizations in teal gradient",
        "supportive": "Gray text for captions and metadata"
      },

      "colorApplication": {
        "headers": "Always use primary teal (#1B7A6E) for section headers",
        "bodyText": "Use gray-700 (#374151) for readable body content",
        "dataViz": "Use teal gradient range for charts and graphs",
        "accents": "Use lighter teal shades for decorative elements",
        "backgrounds": "White (#FFFFFF) for all content areas"
      },

      "typographyRules": {
        "mainTitle": "Large bold teal text, left-aligned",
        "sectionHeaders": "Uppercase white text on teal background",
        "bodyText": "Regular weight gray text with generous line-height",
        "dataLabels": "Small text matching chart colors"
      }
    },

    "accessibility": {
      "contrastRatios": {
        "headerText": "WCAG AAA (>7:1)",
        "bodyText": "WCAG AA (>4.5:1)",
        "dataVizColors": "Distinct hues for colorblind accessibility"
      },
      "fontSizeMinimums": {
        "bodyText": "14px minimum",
        "captions": "12px minimum"
      }
    },

    "implementationNotes": {
      "critical": [
        "Maintain consistent teal (#1B7A6E) across all section headers",
        "Use white background for all content containers",
        "Apply 32px padding to all content sections",
        "Keep section headers full-width with no border-radius",
        "Use triangular flag shape for top-right branding element"
      ],
      "avoid": [
        "Do not apply gradients to text or backgrounds",
        "Do not add shadows to content containers",
        "Do not use border-radius on section headers",
        "Do not mix teal shades within the same component type",
        "Do not reduce padding below specified minimums"
      ],
      "responsive": [
        "Stack columns vertically on mobile devices",
        "Reduce font sizes proportionally for smaller screens",
        "Maintain minimum touch target size of 44x44px",
        "Adjust chart dimensions to fit container width"
      ]
    }
  }
}